@startuml
'Fonctionnalite 14 15 16 17 18 19 : camera arene position
skinparam monochrome true

start 

repeat
:OuvrirCamera?;
:Camera.Open();
repeat while (OpenReussi?) 

->yes;



  
:StartPeriod(100ms);

repeat

if (RechercherArena?) then (yes)
 :image=Camera.Grab();
 :arena=Img.SearchArena(image);
 if (arena) then (NULL)
    :ComMonitor.Write(Message(NO_ACK));
 else
    :image=Img.DrawArena(image, arena);

    :ComMonitor.Write(Message(jpgimage));
    if (arena ok) then (true)
        :save arena;
    else (false)
        :delete arena;
    endif
 endif
endif



if (Camera.Close) then (yes)
 :FermerCamera?;
 :StopperEnvoi;
 stop
else
 :WaitNextPeriod;
 if (I=Camera.Grab=1) then (yes)
   if (TrouverPos=1) then (yes)
    :Pos=SearchRobot(I,arena);
     if (Pos==null) then (no)
      :I=DrawRobot(I,Pos);
     else (no)
      :Pos=(-1,-1);
     endif
     :ComMonitor.Write(Pos); 
    endif
     if (Arena!=null) then (yes)
      :I.DrawArena(I, Arena);
     endif

 :ComMonitor.Write(I);
 endif


endif

repeat while
'endif
@enduml
